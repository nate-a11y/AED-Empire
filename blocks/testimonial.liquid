{% doc %}
  @name Testimonial Block
  @description A reusable testimonial card with quote, author, and star rating
  @category Social Proof

  @param {number} [stars=5] - Number of stars to display (1-5)
{% enddoc %}

{%- liquid
  assign stars = block.settings.stars | default: 5
-%}

<div class="testimonial-block" {{ block.shopify_attributes }}>
  {%- if stars > 0 -%}
    <div class="testimonial-block__stars" role="img" aria-label="{{ stars }} out of 5 stars">
      {%- for i in (1..5) -%}
        <svg
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="{% if i <= stars %}currentColor{% else %}none{% endif %}"
          stroke="currentColor"
          stroke-width="1.5"
          aria-hidden="true"
        >
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
        </svg>
      {%- endfor -%}
    </div>
  {%- endif -%}

  {%- if block.settings.quote != blank -%}
    <blockquote class="testimonial-block__quote">
      <p>"{{ block.settings.quote }}"</p>
    </blockquote>
  {%- endif -%}

  <div class="testimonial-block__author">
    {%- if block.settings.author_image -%}
      <img
        src="{{ block.settings.author_image | image_url: width: 80 }}"
        alt="{{ block.settings.author | escape }}"
        class="testimonial-block__avatar"
        width="40"
        height="40"
        loading="lazy"
      >
    {%- endif -%}
    <div class="testimonial-block__author-info">
      {%- if block.settings.author != blank -%}
        <strong class="testimonial-block__author-name">{{ block.settings.author }}</strong>
      {%- endif -%}
      {%- if block.settings.author_title != blank -%}
        <span class="testimonial-block__author-title">{{ block.settings.author_title }}</span>
      {%- endif -%}
    </div>
  </div>
</div>

{% stylesheet %}
.testimonial-block {
  text-align: center;
  padding: var(--spacing-lg, 2rem);
  background: var(--color-background);
  border-radius: var(--border-radius, 8px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.testimonial-block__stars {
  display: flex;
  justify-content: center;
  gap: 0.25rem;
  margin-bottom: 1rem;
  color: var(--color-star, #f59e0b);
}

.testimonial-block__quote {
  margin: 0 0 1.5rem;
  font-size: 1.125rem;
  font-style: italic;
  line-height: 1.6;
  color: var(--color-text);
}

.testimonial-block__author {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
}

.testimonial-block__avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
}

.testimonial-block__author-info {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.testimonial-block__author-name {
  font-weight: 600;
  color: var(--color-heading);
}

.testimonial-block__author-title {
  font-size: 0.875rem;
  color: var(--color-text-light);
}
{% endstylesheet %}

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "range",
      "id": "stars",
      "min": 0,
      "max": 5,
      "step": 1,
      "label": "Star rating",
      "default": 5
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Quote",
      "default": "Excellent products and outstanding customer service. The AED arrived quickly and the team walked us through setup."
    },
    {
      "type": "image_picker",
      "id": "author_image",
      "label": "Author photo"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author name",
      "default": "John Smith"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author title",
      "default": "Safety Director, ABC Company"
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
    }
  ]
}
{% endschema %}

  {
    "name": "Popups & Banners",
    "settings": [
      {
        "type": "header",
        "content": "Cookie consent"
      },
      {
        "type": "checkbox",
        "id": "enable_cookie_banner",
        "label": "Enable cookie consent banner",
        "default": true
      },
      {
        "type": "textarea",
        "id": "cookie_banner_text",
        "label": "Cookie banner text",
        "default": "We use cookies to enhance your experience. By continuing to visit this site you agree to our use of cookies."
      },
      {
        "type": "url",
        "id": "cookie_policy_link",
        "label": "Cookie policy page link"
      },
      {
        "type": "header",
        "content": "Newsletter popup"
      },
      {
        "type": "checkbox",
        "id": "enable_newsletter_popup",
        "label": "Enable newsletter popup",
        "default": false
      },
      {
        "type": "text",
        "id": "newsletter_popup_title",
        "label": "Popup title",
        "default": "Join Our Newsletter"
      },
      {
        "type": "textarea",
        "id": "newsletter_popup_text",
        "label": "Popup text",
        "default": "Subscribe for exclusive offers and updates."
      },
      {
        "type": "text",
        "id": "newsletter_popup_discount",
        "label": "Discount offer text",
        "info": "Optional. e.g., 'Get 10% off your first order'"

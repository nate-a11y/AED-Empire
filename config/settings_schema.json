  },
  {
    "name": "Product cards",
    "settings": [
      {
        "type": "checkbox",
        "id": "product_card_show_vendor",
        "label": "Show vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_card_show_rating",
        "label": "Show product rating",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_card_show_swatches",
        "label": "Show color swatches",
        "default": true,
        "info": "Display color variant swatches on product cards"
      },
      {
        "type": "checkbox",
        "id": "product_card_hover_image",
        "label": "Show second image on hover",
        "default": true
      },
      {
        "type": "select",
        "id": "product_card_image_ratio",
        "label": "Image ratio",
        "options": [
          { "value": "adapt", "label": "Adapt to image" },
          { "value": "square", "label": "Square 1:1" },
          { "value": "portrait", "label": "Portrait 3:4" },
          { "value": "landscape", "label": "Landscape 4:3" }

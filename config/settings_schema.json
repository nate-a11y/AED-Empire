      {
        "type": "checkbox",
        "id": "search_show_collections",
        "label": "Show collections in suggestions",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_pages",
        "label": "Show pages in suggestions",
        "default": false

      {
        "type": "image_picker",
        "id": "newsletter_popup_image",
        "label": "Popup image"
      },
      {
        "type": "range",
        "id": "newsletter_popup_delay",
        "min": 0,
        "max": 60,
        "step": 5,
        "unit": "s",
        "label": "Show popup after",
        "default": 5
      }
    ]
  },
  {
    "name": "Accessibility",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable animations",
        "default": true,
        "info": "Respects user's reduced motion preference"
      },
      {
        "type": "checkbox",
        "id": "show_focus_outlines",
        "label": "Show focus outlines",
        "default": true,
        "info": "Helps keyboard navigation"
      },
      {
        "type": "range",
        "id": "focus_outline_width",
        "min": 1,
        "max": 5,
        "step": 1,
        "unit": "px",
        "label": "Focus outline width",
        "default": 2
      }

<div class="quick-view-modal" data-quick-view-modal hidden>
  <div class="quick-view-modal__overlay" data-quick-view-close></div>
  <div class="quick-view-modal__content">
    <button class="quick-view-modal__close" data-quick-view-close aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18" style="stroke:#1a1a2e !important"/>
        <line x1="6" y1="6" x2="18" y2="18" style="stroke:#1a1a2e !important"/>
      </svg>
    </button>
    <div class="quick-view-modal__body" data-quick-view-body>
      <!-- Content loaded via AJAX -->
      <div class="quick-view-loader">
        <div class="loader"></div>
      </div>
    </div>
  </div>
</div>

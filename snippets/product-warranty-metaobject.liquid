{% comment %} 
  Product Warranty Snippet - Displays warranty info from Warranty Info metaobjects
  
  Usage: {% render 'product-warranty-metaobject', product: product %}
  
  Requires: Product metafield linking to Warranty Info metaobject
  Metafield: product.metafields.custom.warranty_info (metaobject reference)
{% endcomment %}

{% assign warranty = product.metafields.custom.warranty_info.value %}

{% if warranty %}
<div class="product-warranty-mo">
  <h3 class="product-warranty-mo__title">{{ warranty.name | default: 'Warranty Information' }}</h3>

  <div class="product-warranty-mo__card">
    <div class="product-warranty-mo__header">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        <polyline points="9 12 11 14 15 10"/>
      </svg>
      <div>
        {% if warranty.device_warranty_years != blank %}
          <span class="product-warranty-mo__duration">{{ warranty.device_warranty_years }} Year Warranty</span>
        {% endif %}
        <span class="product-warranty-mo__type">{{ warranty.warranty_type | default: 'Limited Manufacturer Warranty' }}</span>
      </div>
    </div>

    {% if warranty.warranty_details != blank %}
      <div class="product-warranty-mo__section">
        <h4>Warranty Coverage</h4>
        <div class="product-warranty-mo__content rte">
          {{ warranty.warranty_details }}
        </div>
      </div>
    {% endif %}

    {% if warranty.device_warranty_years != blank or warranty.battery_warranty_years != blank or warranty.pad_warranty_years != blank %}
      <div class="product-warranty-mo__section">
        <h4>Coverage Duration</h4>
        <div class="product-warranty-mo__content">
          <ul>
            {% if warranty.device_warranty_years != blank %}
              <li><strong>AED Device:</strong> {{ warranty.device_warranty_years }} years</li>
            {% endif %}
            {% if warranty.battery_warranty_years != blank %}
              <li><strong>Battery:</strong> {{ warranty.battery_warranty_years }} years</li>
            {% endif %}
            {% if warranty.pad_warranty_years != blank %}
              <li><strong>Electrode Pads:</strong> {{ warranty.pad_warranty_years }} years</li>
            {% endif %}
          </ul>
        </div>
      </div>
    {% endif %}

    {% if warranty.registration_required %}
      <div class="product-warranty-mo__notice">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
        <span>Product registration required to activate warranty{% if warranty.registration_url != blank %} - <a href="{{ warranty.registration_url }}" target="_blank">Register Now</a>{% endif %}</span>
      </div>
    {% endif %}

    {% if warranty.support_phone != blank or warranty.support_email != blank %}
      <div class="product-warranty-mo__contact">
        <strong>Warranty Support:</strong> 
        {% if warranty.support_phone != blank %}Phone: {{ warranty.support_phone }}{% endif %}
        {% if warranty.support_phone != blank and warranty.support_email != blank %} | {% endif %}
        {% if warranty.support_email != blank %}Email: {{ warranty.support_email }}{% endif %}
      </div>
    {% endif %}
  </div>
</div>

<style>
.product-warranty-mo {
  margin: 30px 0;
}
.product-warranty-mo__title {
  font-size: 1.25rem;
  margin: 0 0 20px;
  font-weight: 600;
}
.product-warranty-mo__card {
  border: 1px solid #ddd;
  border-radius: 12px;
  overflow: hidden;
}
.product-warranty-mo__header {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px;
  background: linear-gradient(135deg, #8b1538 0%, #1a1a2e 100%);
  color: #fff;
}
.product-warranty-mo__header svg {
  flex-shrink: 0;
}
.product-warranty-mo__duration {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1.2;
}
.product-warranty-mo__type {
  font-size: 0.875rem;
  opacity: 0.9;
}
.product-warranty-mo__section {
  padding: 20px;
  border-bottom: 1px solid #ddd;
}
.product-warranty-mo__section:last-of-type {
  border-bottom: none;
}
.product-warranty-mo__section h4 {
  margin: 0 0 10px;
  font-size: 0.9375rem;
  font-weight: 600;
}
.product-warranty-mo__content {
  font-size: 0.9375rem;
  line-height: 1.6;
  color: #666;
}
.product-warranty-mo__content p:last-child {
  margin-bottom: 0;
}
.product-warranty-mo__content ul {
  margin: 0;
  padding-left: 20px;
}
.product-warranty-mo__content ul li {
  margin: 8px 0;
}
.product-warranty-mo__notice {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 20px;
  background: #fff3cd;
  font-size: 0.875rem;
  border-bottom: 1px solid #ddd;
}
.product-warranty-mo__notice svg {
  flex-shrink: 0;
  color: #856404;
}
.product-warranty-mo__notice a {
  color: #856404;
  text-decoration: underline;
}
.product-warranty-mo__contact {
  padding: 15px 20px;
  font-size: 0.875rem;
  background: #f9f9f9;
}
</style>
{% endif %}

{% comment %} 
  Product Warranty Snippet - Displays warranty info from Warranty Info metaobjects
  
  Usage: {% render 'product-warranty-metaobject', product: product %}
  
  Requires: Product metafield linking to Warranty Info metaobject
  Metafield: product.metafields.custom.warranty_info (metaobject reference)

  Fields used:
  - device_warranty_years
  - warranty_type
  - warranty_details
  - battery_warranty_years
  - pad_warranty_years
  - registration_required
  - support_phone
  - support_email
{% endcomment %}

{% assign warranty = product.metafields.custom.warranty_info.value %}

{% if warranty %}
<div class="product-warranty-mo">
  <h3 class="product-warranty-mo__title">{{ warranty.name | default: 'Warranty Information' }}</h3>

  <div class="product-warranty-mo__card">
    <div class="product-warranty-mo__header">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        <polyline points="9 12 11 14 15 10"/>
      </svg>
      <div>
        <span class="product-warranty-mo__duration">{{ warranty.device_warranty_years }}</span>
        <span class="product-warranty-mo__type">{{ warranty.warranty_type | default: 'Manufacturer Warranty' }}</span>
      </div>
    </div>

    {% if warranty.warranty_details != blank %}
      <div class="product-warranty-mo__section">
        <h4>Warranty Coverage</h4>
        <div class="product-warranty-mo__content rte">
          {{ warranty.warranty_details }}
        </div>
      </div>
    {% endif %}

    {% if warranty.battery_warranty_years != blank or warranty.pad_warranty_years != blank %}
      <div class="product-warranty-mo__section">
        <h4>Coverage Duration</h4>
        <ul class="product-warranty-mo__coverage-list">
          {% if warranty.device_warranty_years != blank %}
            <li><strong>AED Device:</strong> {{ warranty.device_warranty_years }}</li>
          {% endif %}
          {% if warranty.battery_warranty_years != blank %}
            <li><strong>Battery:</strong> {{ warranty.battery_warranty_years }}</li>
          {% endif %}
          {% if warranty.pad_warranty_years != blank %}
            <li><strong>Electrode Pads:</strong> {{ warranty.pad_warranty_years }}</li>
          {% endif %}
        </ul>
      </div>
    {% endif %}

    {% if warranty.registration_required %}
      <div class="product-warranty-mo__notice">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
        <span>Product registration required to activate warranty{% if warranty.registration_url != blank %} - <a href="{{ warranty.registration_url }}" target="_blank">Register Now</a>{% endif %}</span>
      </div>
    {% endif %}

    {% if warranty.support_phone != blank or warranty.support_email != blank %}
      <div class="product-warranty-mo__contact">
        <strong>Warranty Support:</strong>
        {% if warranty.support_phone != blank %}
          <span class="product-warranty-mo__contact-item">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            {{ warranty.support_phone }}
          </span>
        {% endif %}
        {% if warranty.support_email != blank %}
          <span class="product-warranty-mo__contact-item">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <a href="mailto:{{ warranty.support_email }}">{{ warranty.support_email }}</a>
          </span>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<style>
.product-warranty-mo {
  margin: 30px 0;
}
.product-warranty-mo__title {
  font-size: 1.25rem;
  margin: 0 0 20px;
  font-weight: 600;
}
.product-warranty-mo__card {
  border: 1px solid #ddd;
  border-radius: 12px;
  overflow: hidden;
}
.product-warranty-mo__header {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px;
  background: linear-gradient(135deg, #8b1538 0%, #1a1a2e 100%);
  color: #fff;
}
.product-warranty-mo__header svg {
  flex-shrink: 0;
}
.product-warranty-mo__duration {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1.2;
}
.product-warranty-mo__type {
  font-size: 0.875rem;
  opacity: 0.9;
}
.product-warranty-mo__section {
  padding: 20px;
  border-bottom: 1px solid #ddd;
}
.product-warranty-mo__section:last-of-type {
  border-bottom: none;
}
.product-warranty-mo__section h4 {
  margin: 0 0 10px;
  font-size: 0.9375rem;
  font-weight: 600;
}
.product-warranty-mo__content {
  font-size: 0.9375rem;
  line-height: 1.6;
  color: #666;
}
.product-warranty-mo__content p:last-child {
  margin-bottom: 0;
}
.product-warranty-mo__content ul {
  margin: 0;
  padding-left: 20px;
}
.product-warranty-mo__coverage-list {
  margin: 0;
  padding: 0;
  list-style: none;
}
.product-warranty-mo__coverage-list li {
  padding: 8px 0;
  border-bottom: 1px solid var(--color-border);
  font-size: 0.9375rem;
}
.product-warranty-mo__coverage-list li:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
.product-warranty-mo__notice {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 20px;
  background: #fff3cd;
  font-size: 0.875rem;
  border-bottom: 1px solid #ddd;
}
.product-warranty-mo__notice svg {
  flex-shrink: 0;
  color: #856404;
}
.product-warranty-mo__notice a {
  color: #856404;
  text-decoration: underline;
}
.product-warranty-mo__contact {
  padding: 15px 20px;
  font-size: 0.875rem;
  background: #f9f9f9;
}
.product-warranty-mo__contact-item {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  margin-left: 12px;
}
.product-warranty-mo__contact-item a {
  color: var(--color-primary);
}
</style>
{% endif %}

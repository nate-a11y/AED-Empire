{% doc %}
  @name Loading Spinner
  @description Renders an accessible loading spinner with visually hidden text.
  Follows Dawn theme best practices.

  @param {string} [class] - Additional CSS classes for styling

  @example
    {% render 'loading-spinner' %}

  @example
    {% render 'loading-spinner', class: 'button__spinner' %}
{% enddoc %}

<div class="loading-spinner{% if class %} {{ class }}{% endif %}">
  <span class="visually-hidden">Loading</span>
  {{- 'loading-spinner.svg' | inline_asset_content -}}
</div>

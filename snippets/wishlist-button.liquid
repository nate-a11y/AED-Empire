{% comment %}
  Wishlist Button Snippet
  Usage: {% render 'wishlist-button', product: product %}

  Premium feature - saves to localStorage for guests,
  can be extended to save to customer metafields for logged-in users
{% endcomment %}

<button
  type="button"
  class="wishlist-btn"
  data-wishlist-add="{{ product.handle }}"
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-price="{{ product.price }}"
  data-product-image="{{ product.featured_image | image_url: width: 200 }}"
  data-product-url="{{ product.url }}"
  data-product-available="{{ product.available }}"
  aria-label="Add {{ product.title | escape }} to wishlist"
  aria-pressed="false"
>
  <svg class="wishlist-btn__icon wishlist-btn__icon--empty" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
    <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
  </svg>
  <svg class="wishlist-btn__icon wishlist-btn__icon--filled" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" aria-hidden="true">
    <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
  </svg>
  <span class="wishlist-btn__text">{{ settings.wishlist_button_text | default: 'Save' }}</span>
</button>

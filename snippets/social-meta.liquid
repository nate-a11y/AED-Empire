{% comment %}
  Open Graph & Twitter Card Meta Tags
  Provides rich social media previews when links are shared
{% endcomment %}

{% liquid
  assign og_title = page_title | default: shop.name
  assign og_description = page_description | default: shop.description | strip_html | truncate: 200
  assign og_type = 'website'
  assign og_image = settings.share_image | default: nil
  assign og_image_alt = settings.share_image_alt | default: shop.name

  if template contains 'product'
    assign og_type = 'product'
    assign og_title = product.title | append: ' | ' | append: shop.name
    assign og_description = product.description | strip_html | truncate: 200 | default: page_description
    if product.featured_image
      assign og_image = product.featured_image | image_url: width: 1200
      assign og_image_alt = product.featured_image.alt | default: product.title
    endif
  elsif template contains 'collection'
    assign og_title = collection.title | append: ' | ' | append: shop.name
    assign og_description = collection.description | strip_html | truncate: 200 | default: page_description
    if collection.image
      assign og_image = collection.image | image_url: width: 1200
      assign og_image_alt = collection.image.alt | default: collection.title
    endif
  elsif template contains 'article'
    assign og_type = 'article'
    assign og_title = article.title | append: ' | ' | append: shop.name
    assign og_description = article.excerpt_or_content | strip_html | truncate: 200
    if article.image
      assign og_image = article.image | image_url: width: 1200
      assign og_image_alt = article.image.alt | default: article.title
    endif
  elsif template contains 'blog'
    assign og_title = blog.title | append: ' | ' | append: shop.name
  elsif template contains 'page'
    assign og_title = page.title | append: ' | ' | append: shop.name
    assign og_description = page.content | strip_html | truncate: 200 | default: page_description
  endif

  if og_image == nil and settings.share_image
    assign og_image = settings.share_image | image_url: width: 1200
  endif
%}

<!-- Open Graph -->
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
{% if og_description %}<meta property="og:description" content="{{ og_description | escape }}">{% endif %}
{% if og_image %}<meta property="og:image" content="{{ og_image }}">{% endif %}
{% if og_image_alt %}<meta property="og:image:alt" content="{{ og_image_alt | escape }}">{% endif %}
<meta property="og:locale" content="{{ request.locale.iso_code | replace: '-', '_' }}">

{% if template contains 'product' %}
<meta property="og:price:amount" content="{{ product.price | money_without_currency }}">
<meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
<meta property="product:availability" content="{% if product.available %}in stock{% else %}out of stock{% endif %}">
{% endif %}

{% if template contains 'article' %}
<meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}">
<meta property="article:author" content="{{ article.author }}">
{% if article.tags.size > 0 %}
{% for tag in article.tags %}<meta property="article:tag" content="{{ tag }}">{% endfor %}
{% endif %}
{% endif %}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
{% if og_description %}<meta name="twitter:description" content="{{ og_description | escape }}">{% endif %}
{% if og_image %}<meta name="twitter:image" content="{{ og_image }}">{% endif %}
{% if og_image_alt %}<meta name="twitter:image:alt" content="{{ og_image_alt | escape }}">{% endif %}
{% if settings.social_twitter %}<meta name="twitter:site" content="@{{ settings.social_twitter | split: '/' | last | remove: '@' }}">{% endif %}

{% comment %}
  Related/Complementary Products Section
  Shows batteries, pads, and accessories for AEDs
{% endcomment %}

{% if product.metafields.custom.complementary_products.value %}
  {% assign related_products = product.metafields.custom.complementary_products.value %}
  
  {% if related_products.size > 0 %}
    <div class="page-width">
      <div class="related-products-section" style="margin: 60px auto; padding: 40px 20px; border-top: 1px solid #e5e5e5; max-width: 1400px;">
        <h2 style="font-size: 28px; font-weight: 700; color: #8b1538; margin-bottom: 10px; font-family: inherit;">
          You Might Also Need
        </h2>
        <p style="color: #666; margin-bottom: 30px; font-size: 16px;">
          Keep your AED rescue-ready with these essential accessories
        </p>
        
        <div class="related-products-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 24px;">
          {% for related_product in related_products %}
            {% if related_product.available %}
              <div class="related-product-card" style="border: 1px solid #e5e5e5; border-radius: 8px; padding: 20px; transition: all 0.3s ease; background: white;">
                <a href="{{ related_product.url }}" style="text-decoration: none; color: inherit; display: block;">
                  {% if related_product.featured_image %}
                    <div class="related-product-image" style="position: relative; padding-bottom: 100%; overflow: hidden; border-radius: 4px; margin-bottom: 15px; background: #f9f9f9;">
                      <img 
                        src="{{ related_product.featured_image | image_url: width: 400 }}" 
                        alt="{{ related_product.featured_image.alt | default: related_product.title }}"
                        loading="lazy"
                        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: contain; padding: 10px;"
                      >
                    </div>
                  {% endif %}
                  
                  <h3 style="font-size: 15px; font-weight: 600; color: #333; margin: 0 0 10px 0; line-height: 1.4; min-height: 42px;">
                    {{ related_product.title }}
                  </h3>
                  
                  <div style="display: flex; align-items: center; justify-content: space-between; margin-top: 12px;">
                    <span style="font-size: 20px; font-weight: 700; color: #8b1538;">
                      {{ related_product.price | money }}
                    </span>
                    
                    {% if related_product.compare_at_price > related_product.price %}
                      <span style="font-size: 14px; color: #999; text-decoration: line-through;">
                        {{ related_product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>
                  
                  <button type="button" class="related-product-btn" style="
                    width: 100%;
                    margin-top: 15px;
                    padding: 12px 18px;
                    background: #8b1538;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    font-size: 14px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: background 0.3s ease;
                  ">
                    View Details â†’
                  </button>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

    <style>
      .related-product-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(139, 21, 56, 0.15);
        border-color: #8b1538;
      }
      
      .related-product-btn:hover {
        background: #6d1129;
      }
      
      @media (max-width: 768px) {
        .related-products-section {
          padding: 30px 15px !important;
          margin: 40px auto !important;
        }
        
        .related-products-grid {
          grid-template-columns: repeat(2, 1fr) !important;
          gap: 15px !important;
        }
        
        .related-products-section h2 {
          font-size: 24px !important;
        }
      }
      
      @media (max-width: 480px) {
        .related-products-grid {
          grid-template-columns: 1fr !important;
        }
      }
    </style>
  {% endif %}
{% endif %}

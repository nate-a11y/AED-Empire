  height: 20px;
  background: var(--color-primary);
  color: #fff;
  border: none;
  border-radius: 50%;
  font-size: 14px;
  line-height: 1;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}
.compare-bar__actions {
  display: flex;
  align-items: center;
  gap: 15px;
}
.compare-bar__count {
  font-size: 0.875rem;
  color: var(--color-text-light);
}
.compare-bar__clear {
  background: none;
  border: none;
  color: var(--color-text-light);
  cursor: pointer;
  padding: 5px;
}

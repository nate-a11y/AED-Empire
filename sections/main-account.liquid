<section class="section">
  <div class="container">
    <div class="account-page__header">
      <h1>My Account</h1>
      <a href="{{ routes.account_logout_url }}" class="btn btn--outline">Log Out</a>
    </div>
    <div class="grid grid--2">
      <div>
        <h3>Account Details</h3>
        <p><strong>{{ customer.name }}</strong></p>
        <p>{{ customer.email }}</p>
        <a href="{{ routes.account_addresses_url }}" style="margin-top:15px;display:inline-block">Manage Addresses</a>
      </div>
      <div>
        <h3>Order History</h3>
        {% if customer.orders.size > 0 %}
          <table class="account-table">
            <thead><tr><th>Order</th><th>Date</th><th>Total</th></tr></thead>
            <tbody>
              {% for order in customer.orders %}
                <tr>
                  <td><a href="{{ order.customer_url }}">{{ order.name }}</a></td>
                  <td>{{ order.created_at | date: '%B %d, %Y' }}</td>
                  <td>{{ order.total_price | money }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p>You haven't placed any orders yet.</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% schema %}{"name":"Account","settings":[]}{% endschema %}

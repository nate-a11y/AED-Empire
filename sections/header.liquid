<header class="header" data-header>
  {%- if section.settings.announcement_show and section.settings.announcement_text != blank -%}
    <div class="header__announcement" role="region" aria-label="Promotions" style="background: {{ section.settings.announcement_bg }}; color: {{ section.settings.announcement_color }};">
      <div class="container">
        <div class="announcement-inner">
          {% if section.settings.announcement_icon %}
            <span class="announcement-icon" aria-hidden="true">{% render 'icon', name: section.settings.announcement_icon %}</span>
          {% endif %}
          <span>{{ section.settings.announcement_text }}</span>
          {% if section.settings.announcement_countdown and section.settings.countdown_date != blank %}
            <span class="countdown" data-countdown="{{ section.settings.countdown_date }}" aria-live="polite" aria-atomic="true"></span>
          {% endif %}
          {% if section.settings.announcement_link != blank %}
            <a href="{{ section.settings.announcement_link }}" class="announcement-link" style="color: {{ section.settings.announcement_color }};">{{ section.settings.announcement_link_text | default: 'Learn More' }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  {%- endif -%}

  <div class="header__main">
    <div class="container">
      <div class="header__inner">
        <button class="header__menu-toggle" data-menu-toggle aria-label="Open navigation menu" aria-expanded="false" aria-controls="mobile-menu">
          <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
        </button>

        <a href="/" class="header__logo" aria-label="{{ shop.name }} - Home">
          {% if settings.logo %}
            {% assign logo_width = settings.logo_width | default: 150 %}
            {% assign logo_aspect = settings.logo.aspect_ratio | default: 1 %}
            {% assign logo_height = logo_width | divided_by: logo_aspect | round %}
            <img src="{{ settings.logo | image_url: width: logo_width | times: 2 }}"
                 alt="{{ shop.name }}"
                 width="{{ logo_width }}"
                 height="{{ logo_height }}"
                 loading="eager"
                 onerror="this.onerror=null;this.style.display='none';this.nextElementSibling.style.display='inline';">
            <span class="header__logo-text" style="display:none">{{ shop.name }}</span>
          {% else %}
            <span class="header__logo-text">{{ shop.name }}</span>
          {% endif %}
        </a>

        <nav class="header__nav" data-nav aria-label="Main navigation">
          <ul class="header__menu" role="menubar">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'menu_item' %}
                  <li class="header__menu-item" role="none">
                    <a href="{{ block.settings.link }}" role="menuitem">{{ block.settings.title }}</a>
                  </li>
                {% when 'mega_menu' %}
                  {% assign mega_id = 'mega-menu-' | append: forloop.index %}
                  <li class="header__menu-item header__menu-item--mega" role="none" data-mega-menu>
                    <button class="header__mega-trigger" role="menuitem" aria-haspopup="true" aria-expanded="false" aria-controls="{{ mega_id }}">
                      {{ block.settings.title }}
                      <svg aria-hidden="true" focusable="false" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
                    </button>
                    <div class="mega-menu" id="{{ mega_id }}" data-mega-panel role="menu" aria-label="{{ block.settings.title }} submenu">
                      <div class="container">
                        <div class="mega-menu__inner">
                          {% if block.settings.collection_1 != blank %}
                            <div class="mega-menu__column">
                              {% assign col1 = collections[block.settings.collection_1] %}
                              <h4 class="mega-menu__heading" id="mega-col1-{{ forloop.index }}">{{ col1.title }}</h4>
                              <ul role="group" aria-labelledby="mega-col1-{{ forloop.index }}">
                                {% for product in col1.products limit: 6 %}
                                  <li role="none"><a href="{{ product.url }}" role="menuitem">{{ product.title }}</a></li>
                                {% endfor %}
                                <li role="none"><a href="{{ col1.url }}" class="mega-menu__view-all" role="menuitem">View All {{ col1.title }}</a></li>
                              </ul>
                            </div>
                          {% endif %}
                          {% if block.settings.collection_2 != blank %}
                            <div class="mega-menu__column">
                              {% assign col2 = collections[block.settings.collection_2] %}
                              <h4 class="mega-menu__heading" id="mega-col2-{{ forloop.index }}">{{ col2.title }}</h4>
                              <ul role="group" aria-labelledby="mega-col2-{{ forloop.index }}">
                                {% for product in col2.products limit: 6 %}
                                  <li role="none"><a href="{{ product.url }}" role="menuitem">{{ product.title }}</a></li>
                                {% endfor %}
                                <li role="none"><a href="{{ col2.url }}" class="mega-menu__view-all" role="menuitem">View All {{ col2.title }}</a></li>
                              </ul>
                            </div>
                          {% endif %}
                          {% if block.settings.collection_3 != blank %}
                            <div class="mega-menu__column">
                              {% assign col3 = collections[block.settings.collection_3] %}
                              <h4 class="mega-menu__heading" id="mega-col3-{{ forloop.index }}">{{ col3.title }}</h4>
                              <ul role="group" aria-labelledby="mega-col3-{{ forloop.index }}">
                                {% for product in col3.products limit: 6 %}
                                  <li role="none"><a href="{{ product.url }}" role="menuitem">{{ product.title }}</a></li>
                                {% endfor %}
                                <li role="none"><a href="{{ col3.url }}" class="mega-menu__view-all" role="menuitem">View All {{ col3.title }}</a></li>
                              </ul>
                            </div>
                          {% endif %}
                          {% if block.settings.featured_image %}
                            <div class="mega-menu__featured">
                              <a href="{{ block.settings.featured_link }}" role="menuitem">
                                <img src="{{ block.settings.featured_image | image_url: width: 400 }}" alt="{{ block.settings.featured_title | default: 'Featured promotion' | escape }}" loading="lazy">
                                {% if block.settings.featured_title %}
                                  <span class="mega-menu__featured-title">{{ block.settings.featured_title }}</span>
                                {% endif %}
                              </a>
                            </div>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  </li>
                {% when 'dropdown' %}
                  {% assign dropdown_id = 'dropdown-' | append: forloop.index %}
                  <li class="header__menu-item header__menu-item--dropdown" role="none">
                    <button class="header__dropdown-trigger" role="menuitem" aria-haspopup="true" aria-expanded="false" aria-controls="{{ dropdown_id }}">
                      {{ block.settings.title }}
                      <svg aria-hidden="true" focusable="false" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
                    </button>
                    <ul class="header__dropdown" id="{{ dropdown_id }}" role="menu" aria-label="{{ block.settings.title }} submenu">
                      {% assign menu = linklists[block.settings.menu] %}
                      {% for link in menu.links %}
                        <li role="none"><a href="{{ link.url }}" role="menuitem">{{ link.title }}</a></li>
                      {% endfor %}
                    </ul>
                  </li>
              {% endcase %}
            {% endfor %}
          </ul>
        </nav>

        <div class="header__actions">
          <button class="header__search-toggle" data-search-toggle aria-label="Open search" aria-expanded="false" aria-controls="predictive-search">
            <svg aria-hidden="true" focusable="false" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
          </button>

          {% if shop.customer_accounts_enabled %}
            <a href="{% if customer %}/account{% else %}/account/login{% endif %}" class="header__account" aria-label="{% if customer %}My account{% else %}Log in{% endif %}">
              <svg aria-hidden="true" focusable="false" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            </a>
          {% endif %}

          {% if settings.contact_phone != blank %}
            <a href="tel:{{ settings.contact_phone | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="header__phone" aria-label="Call us at {{ settings.contact_phone }}">
              <svg aria-hidden="true" focusable="false" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/></svg>
              <span class="header__phone-text" aria-hidden="true">{{ settings.contact_phone }}</span>
            </a>
          {% endif %}

          <a href="/cart" class="header__cart" data-cart-toggle aria-label="Cart, {{ cart.item_count }} items">
            <svg aria-hidden="true" focusable="false" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 01-8 0"/></svg>
            <span class="header__cart-count" data-cart-count aria-hidden="true">{{ cart.item_count }}</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Predictive Search -->
  <div class="predictive-search" id="predictive-search" data-predictive-search hidden role="dialog" aria-label="Search" aria-modal="true">
    <div class="container">
      <div class="predictive-search__inner">
        <form action="/search" method="get" class="predictive-search__form" role="search">
          <label for="search-input" class="visually-hidden">Search products, collections...</label>
          <input type="search" id="search-input" name="q" placeholder="Search products, collections..." autocomplete="off" data-search-input aria-describedby="search-hint">
          <span id="search-hint" class="visually-hidden">Type to search. Results will appear below.</span>
          <button type="button" class="predictive-search__close" data-search-close aria-label="Close search">
            <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
          </button>
        </form>
        <div class="predictive-search__results" data-search-results role="listbox" aria-label="Search results"></div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav class="mobile-menu" id="mobile-menu" data-mobile-menu aria-label="Mobile navigation" aria-hidden="true">
    <div class="mobile-menu__header">
      <span id="mobile-menu-title">Menu</span>
      <button class="mobile-menu__close" data-menu-close aria-label="Close navigation menu">
        <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
      </button>
    </div>
    <div class="mobile-menu__nav" role="menu" aria-labelledby="mobile-menu-title">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu_item' %}
            <a href="{{ block.settings.link }}" class="mobile-menu__link" role="menuitem">{{ block.settings.title }}</a>
          {% when 'mega_menu' or 'dropdown' %}
            {% assign accordion_id = 'mobile-accordion-' | append: forloop.index %}
            <div class="mobile-menu__accordion">
              <button class="mobile-menu__accordion-trigger" aria-expanded="false" aria-controls="{{ accordion_id }}">
                {{ block.settings.title }}
                <svg aria-hidden="true" focusable="false" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
              </button>
              <div class="mobile-menu__accordion-content" id="{{ accordion_id }}" role="menu" aria-label="{{ block.settings.title }} submenu">
                {% if block.type == 'mega_menu' %}
                  {% if block.settings.collection_1 != blank %}
                    {% assign col = collections[block.settings.collection_1] %}
                    <a href="{{ col.url }}" role="menuitem">{{ col.title }}</a>
                  {% endif %}
                  {% if block.settings.collection_2 != blank %}
                    {% assign col = collections[block.settings.collection_2] %}
                    <a href="{{ col.url }}" role="menuitem">{{ col.title }}</a>
                  {% endif %}
                  {% if block.settings.collection_3 != blank %}
                    {% assign col = collections[block.settings.collection_3] %}
                    <a href="{{ col.url }}" role="menuitem">{{ col.title }}</a>
                  {% endif %}
                {% else %}
                  {% assign menu = linklists[block.settings.menu] %}
                  {% for link in menu.links %}
                    <a href="{{ link.url }}" role="menuitem">{{ link.title }}</a>
                  {% endfor %}
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    {% if settings.contact_phone != blank %}
      <a href="tel:{{ settings.contact_phone | remove: ' ' }}" class="mobile-menu__phone" aria-label="Call {{ settings.contact_phone }}">
        {% render 'icon', name: 'phone' %}
        <span aria-hidden="true">{{ settings.contact_phone }}</span>
      </a>
    {% endif %}
  </nav>
  <div class="mobile-menu__overlay" data-menu-overlay aria-hidden="true"></div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Announcement Bar"
    },
    {
      "type": "checkbox",
      "id": "announcement_show",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on orders over $500"
    },
    {
      "type": "color",
      "id": "announcement_bg",
      "label": "Background color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "announcement_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "announcement_icon",
      "label": "Icon",
      "options": [
        {"value": "", "label": "None"},
        {"value": "shield", "label": "Shield"},
        {"value": "truck", "label": "Truck"},
        {"value": "heart", "label": "Heart"},
        {"value": "clock", "label": "Clock"},
        {"value": "check", "label": "Checkmark"}
      ],
      "default": "truck"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "announcement_link_text",
      "label": "Link text",
      "default": "Learn More"
    },
    {
      "type": "checkbox",
      "id": "announcement_countdown",
      "label": "Show countdown timer",
      "default": false
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Countdown end date",
      "info": "Format: YYYY-MM-DD HH:MM"
    }
  ],
  "blocks": [
    {
      "type": "menu_item",
      "name": "Menu item",
      "settings": [
        {"type": "text", "id": "title", "label": "Title", "default": "Link"},
        {"type": "url", "id": "link", "label": "Link"}
      ]
    },
    {
      "type": "mega_menu",
      "name": "Mega menu",
      "settings": [
        {"type": "text", "id": "title", "label": "Title", "default": "Shop"},
        {"type": "collection", "id": "collection_1", "label": "Collection 1"},
        {"type": "collection", "id": "collection_2", "label": "Collection 2"},
        {"type": "collection", "id": "collection_3", "label": "Collection 3"},
        {"type": "image_picker", "id": "featured_image", "label": "Featured image"},
        {"type": "text", "id": "featured_title", "label": "Featured title"},
        {"type": "url", "id": "featured_link", "label": "Featured link"}
      ]
    },
    {
      "type": "dropdown",
      "name": "Dropdown menu",
      "settings": [
        {"type": "text", "id": "title", "label": "Title", "default": "More"},
        {"type": "link_list", "id": "menu", "label": "Menu"}
      ]
    }
  ],
  "presets": [{"name": "Header"}]
}
{% endschema %}

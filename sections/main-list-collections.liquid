{% doc %}
  @name Collections List
  @description Displays all collections in a uniform grid with consistent card sizing.
{% enddoc %}

<section class="section" style="padding: 60px 0;">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <div style="text-align: center; margin-bottom: 40px;">
        <h1 style="margin: 0 0 10px;">{{ section.settings.title }}</h1>
        {%- if section.settings.subtitle != blank -%}
          <p style="color: #666; margin: 0;">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- else -%}
      <h1 class="visually-hidden">Collections</h1>
    {%- endif -%}

    {%- comment -%} Grid with inline styles for maximum compatibility {%- endcomment -%}
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 30px;">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'all' or collection.products_count == 0 -%}
          {%- comment -%} Card with fixed structure {%- endcomment -%}
          <a href="{{ collection.url }}" style="display: block; text-decoration: none; color: inherit; background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 12px rgba(0,0,0,0.1); transition: transform 0.3s, box-shadow 0.3s;">

            {%- comment -%} Paper container - fixed square with light gray background {%- endcomment -%}
            <div style="width: 100%; aspect-ratio: 1 / 1; background: #f0f0f0; display: flex; align-items: center; justify-content: center; overflow: hidden;">
              {%- if collection.image -%}
                <img
                  src="{{ collection.image | image_url: width: 800 }}"
                  alt="{{ collection.title | escape }}"
                  style="max-width: 100%; max-height: 100%; width: auto; height: auto; object-fit: contain;"
                  loading="lazy"
                >
              {%- elsif collection.products.first.featured_image -%}
                <img
                  src="{{ collection.products.first.featured_image | image_url: width: 800 }}"
                  alt="{{ collection.title | escape }}"
                  style="max-width: 100%; max-height: 100%; width: auto; height: auto; object-fit: contain;"
                  loading="lazy"
                >
              {%- else -%}
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#ccc" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <path d="M21 15l-5-5L5 21"/>
                </svg>
              {%- endif -%}
            </div>

            {%- comment -%} Content area - fixed height {%- endcomment -%}
            <div style="padding: 20px; text-align: center; min-height: 90px;">
              <h2 style="margin: 0 0 8px; font-size: 1.1rem; font-weight: 600; color: #1a1a2e;">{{ collection.title }}</h2>
              <p style="margin: 0; font-size: 0.875rem; color: #C93C3C;">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</p>
            </div>
          </a>
        {%- endunless -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  @media (max-width: 1024px) {
    .container > div[style*="grid-template-columns"] {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
  @media (max-width: 600px) {
    .container > div[style*="grid-template-columns"] {
      grid-template-columns: 1fr !important;
      gap: 20px !important;
    }
  }
</style>

{% schema %}
{
  "name": "Collections list",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our Collections"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "_if": "title"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on desktop",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collections list",
      "category": "Collection"
    }
  ]
}
{% endschema %}

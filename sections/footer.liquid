<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__about">
        {% if settings.logo_inverted %}
          <img src="{{ settings.logo_inverted | image_url: width: 150 }}" alt="{{ shop.name }}" class="footer__logo" loading="lazy">
        {% elsif settings.logo %}
          <img src="{{ settings.logo | image_url: width: 150 }}" alt="{{ shop.name }}" class="footer__logo" loading="lazy">
        {% endif %}
        <p>{{ section.settings.about_text }}</p>
        <div class="footer__social">
          {% if settings.social_facebook %}<a href="{{ settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook"><svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg></a>{% endif %}
          {% if settings.social_instagram %}<a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram"><svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5"/><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg></a>{% endif %}
          {% if settings.social_youtube %}<a href="{{ settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube"><svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/></svg></a>{% endif %}
          {% if settings.social_linkedin %}<a href="{{ settings.social_linkedin }}" target="_blank" rel="noopener" aria-label="LinkedIn"><svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg></a>{% endif %}
        </div>
      </div>
      
      <div>
        <h4 class="footer__heading">{{ section.settings.menu_1_title }}</h4>
        <ul class="footer__links">
          {% for link in linklists[section.settings.menu_1].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div>
        <h4 class="footer__heading">{{ section.settings.menu_2_title }}</h4>
        <ul class="footer__links">
          {% for link in linklists[section.settings.menu_2].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div>
        <h4 class="footer__heading">Contact</h4>
        {% if settings.contact_phone %}<p style="margin-bottom:10px"><a href="tel:{{ settings.contact_phone | remove: ' ' }}" style="color:rgba(255,255,255,.75)">{{ settings.contact_phone }}</a></p>{% endif %}
        {% if settings.contact_email %}<p style="margin-bottom:10px"><a href="mailto:{{ settings.contact_email }}" style="color:rgba(255,255,255,.75)">{{ settings.contact_email }}</a></p>{% endif %}
        {% if settings.contact_hours %}<p style="color:rgba(255,255,255,.6);font-size:.875rem">{{ settings.contact_hours }}</p>{% endif %}
      </div>
    </div>
    
    <div class="footer__bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About text",
      "default": "Your trusted source for AEDs and life safety equipment. Authorized dealer serving schools, businesses, and communities nationwide."
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu 1 title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu 2 title",
      "default": "Company"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    }
  ]
}
{% endschema %}

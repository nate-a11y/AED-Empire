<section class="section">
  <div class="container">
    <div class="auth-page">
      <h1>Reset Password</h1>
      {% form 'recover_customer_password' %}
        {% if form.posted_successfully? %}
          <p class="form__success">We've sent you an email with a link to reset your password.</p>
        {% else %}
          {{ form.errors | default_errors }}
          <div class="form__group"><label for="email">Email</label><input type="email" id="email" name="email" required></div>
          <button type="submit" class="btn btn--primary btn--full">Send Reset Link</button>
        {% endif %}
      {% endform %}
      <div class="auth-page__alt"><a href="{{ routes.account_login_url }}">&larr; Back to login</a></div>
    </div>
  </div>
</section>
{% schema %}{"name":"Reset Password","settings":[]}{% endschema %}

{% doc %}
  @name Collection List
  @description Displays a curated selection of collections in a responsive grid.
  Allows custom images per collection block.
{% enddoc %}

<style>
/* Collection List Section - Scoped Styles */
.collection-list-section {
  padding: var(--spacing-sections, 80px) 0;
}

/* Grid Layout */
.collection-list-section .collection-list-grid {
  display: grid !important;
  gap: 30px !important;
}

.collection-list-section .collection-list-grid--2 {
  grid-template-columns: repeat(2, 1fr) !important;
}

.collection-list-section .collection-list-grid--3 {
  grid-template-columns: repeat(3, 1fr) !important;
}

.collection-list-section .collection-list-grid--4 {
  grid-template-columns: repeat(4, 1fr) !important;
}

@media (max-width: 1024px) {
  .collection-list-section .collection-list-grid--4 {
    grid-template-columns: repeat(3, 1fr) !important;
  }
}

@media (max-width: 768px) {
  .collection-list-section .collection-list-grid--3,
  .collection-list-section .collection-list-grid--4 {
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 20px !important;
  }
}

@media (max-width: 480px) {
  .collection-list-section .collection-list-grid--2,
  .collection-list-section .collection-list-grid--3,
  .collection-list-section .collection-list-grid--4 {
    grid-template-columns: 1fr !important;
  }
}

/* Collection Card Base */
.collection-list-section .collection-card {
  display: block !important;
  text-decoration: none !important;
  color: inherit;
  background: var(--color-bg, #fff);
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.collection-list-section .collection-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.collection-list-section .collection-card:focus-visible {
  outline: 2px solid var(--color-primary);
  outline-offset: 2px;
}

/* CRITICAL: Image Container - Forces Square Aspect Ratio */
.collection-list-section .collection-card__image {
  position: relative !important;
  width: 100% !important;
  padding-top: 100% !important; /* 1:1 aspect ratio fallback */
  aspect-ratio: 1 / 1 !important;
  overflow: hidden !important;
  background: var(--color-bg-alt, #f5f5f5);
}

/* CRITICAL: Image Styling - Forces Uniform Display */
.collection-list-section .collection-card__image img {
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  width: 100% !important;
  height: 100% !important;
  object-fit: cover !important;
  object-position: center !important;
  transition: transform 0.4s ease;
}

.collection-list-section .collection-card:hover .collection-card__image img {
  transform: scale(1.05);
}

/* Placeholder */
.collection-list-section .collection-card__placeholder {
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  width: 100% !important;
  height: 100% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: var(--color-bg-alt, #f5f5f5);
  color: var(--color-text-light, #999);
}

/* Hover Overlay */
.collection-list-section .collection-card__overlay {
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, transparent 50%);
  display: flex !important;
  align-items: flex-end !important;
  justify-content: center !important;
  padding-bottom: 20px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.collection-list-section .collection-card:hover .collection-card__overlay {
  opacity: 1;
}

/* CTA Button */
.collection-list-section .collection-card__cta {
  display: inline-block;
  padding: 10px 24px;
  background: var(--color-primary, #C93C3C);
  color: #fff !important;
  font-size: 0.875rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-radius: 4px;
  transform: translateY(10px);
  transition: transform 0.3s ease;
}

.collection-list-section .collection-card:hover .collection-card__cta {
  transform: translateY(0);
}

/* Card Content */
.collection-list-section .collection-card__content {
  padding: 20px;
  text-align: center;
}

.collection-list-section .collection-card__title {
  margin: 0 0 4px !important;
  font-size: 1.125rem !important;
  font-weight: 600 !important;
  color: var(--color-text, #1a1a2e) !important;
  line-height: 1.3;
}

.collection-list-section .collection-card__count {
  margin: 0 !important;
  font-size: 0.875rem;
  color: var(--color-primary, #C93C3C);
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .collection-list-section .collection-card,
  .collection-list-section .collection-card__image img,
  .collection-list-section .collection-card__overlay,
  .collection-list-section .collection-card__cta {
    transition: none !important;
  }
  .collection-list-section .collection-card:hover .collection-card__image img {
    transform: none !important;
  }
}
</style>

<section class="section collection-list-section{% if section.settings.alt_bg %} section--alt{% endif %}">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <div class="section-header">
        <h2>{{ section.settings.title }}</h2>
        {%- if section.settings.subtitle -%}
          <p>{{ section.settings.subtitle }}</p>
        {%- endif -%}
        <div class="section-header__divider" aria-hidden="true"></div>
      </div>
    {%- endif -%}

    <div class="collection-list-grid collection-list-grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        {%- assign collection = collections[block.settings.collection] -%}
        {%- if collection != blank -%}
          <a href="{{ collection.url }}" class="collection-card" {{ block.shopify_attributes }}>
            <div class="collection-card__image">
              {%- if block.settings.image -%}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ collection.title | escape }}"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              {%- elsif collection.image -%}
                <img
                  src="{{ collection.image | image_url: width: 800 }}"
                  alt="{{ collection.title | escape }}"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              {%- elsif collection.products.first.featured_image -%}
                <img
                  src="{{ collection.products.first.featured_image | image_url: width: 800 }}"
                  alt="{{ collection.title | escape }}"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              {%- else -%}
                <div class="collection-card__placeholder">
                  <svg aria-hidden="true" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="3" width="18" height="18" rx="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <path d="M21 15l-5-5L5 21"/>
                  </svg>
                </div>
              {%- endif -%}
              <div class="collection-card__overlay">
                <span class="collection-card__cta">{{ section.settings.button_text | default: 'Shop Now' }}</span>
              </div>
            </div>
            <div class="collection-card__content">
              <h3 class="collection-card__title">{{ collection.title }}</h3>
              {%- if section.settings.show_product_count -%}
                <p class="collection-card__count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</p>
              {%- endif -%}
            </div>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection list",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "_if": "title"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns",
      "default": 3
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "alt_bg",
      "label": "Alternate background",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image",
          "info": "Overrides the collection image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection list",
      "category": "Collection",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}

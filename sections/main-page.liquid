<section class="section page-section">
  <div class="container">
    {%- if section.settings.show_title -%}
      <div class="page__header">
        <h1 class="page__title">{{ page.title }}</h1>
      </div>
    {%- endif -%}
    <div class="page__content rte">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page content",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    }
  ]
}
{% endschema %}
